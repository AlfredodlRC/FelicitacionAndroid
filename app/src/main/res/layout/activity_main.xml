<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imagen_fondo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/secuencia_de_fondos"
        app:srcCompat="@drawable/muneco1" />


    <TextView
        android:id="@+id/texto_cabecera"
        android:layout_width="302dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="129dp"
        android:layout_marginTop="492dp"
        android:fontFamily="@font/beautybeast"
        android:text="@string/felices_fiestas"
        android:textAlignment="center"
        android:textColor="@color/purple_pink"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/texto_cuerpo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="129dp"
        android:layout_marginTop="605dp"
        android:fontFamily="@font/beautybeast"
        android:text="@string/a_todos"
        android:textColor="@color/purple_pink"
        android:textSize="28sp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/botonIzquierdo"
        android:layout_width="76dp"
        android:layout_height="81dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="312dp"
        android:layout_marginTop="598dp"
        android:clickable="true"
        android:contentDescription="@string/otraanimacion"
        android:focusable="true"

        app:backgroundTint="#c071fe"
        app:srcCompat="@android:drawable/ic_input_add" />


</RelativeLayout>